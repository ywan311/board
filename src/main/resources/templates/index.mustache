{{>layout/header}}

<h1>게시판 만들기</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/board/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#boards}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/board/update/{{id}}">{{title}}</a></td>
                <td>{{createdAt}}</td>
            </tr>
        {{/boards}}
        </tbody>
    </table>
</div>
{{>layout/footer}}